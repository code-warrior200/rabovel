{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/navigation/*": ["./src/navigation/*"],
      "@/theme/*": ["./src/theme/*"],
      "@/services/*": ["./src/services/*"],
      "@/context/*": ["./src/context/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  }
}
